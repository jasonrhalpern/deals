<%= bootstrap_form_for [@business, @location] do |f| %>

    <%= f.alert_message "Please fix the errors below." %>

    <div class="field">
      <%= f.text_field :street %>
    </div>

    <div class="field">
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.select(:state, options_for_select(us_states, @location.state.blank? ? "" : @location.state), include_blank: "" ) %>
    </div>

    <div class="field">
      <%= f.text_field :zip_code %>
    </div>

    <div class="field">
      <%= f.text_field :phone_number %>
    </div>

    <div class="actions">
      <%= f.submit 'Save' %>
    </div>

<% end %>